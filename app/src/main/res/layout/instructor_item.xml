<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/instructor_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/profile_placeholder"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="Instructor Image"
        android:layout_marginBottom="8dp" />

    <!-- Instructor Name -->
    <TextView
        android:id="@+id/instructor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructor Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center" />

    <!-- Biography -->
    <TextView
        android:id="@+id/instructor_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biography and qualifications"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <!-- Office Location -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location"
            android:contentDescription="Location Icon" />

        <TextView
            android:id="@+id/instructor_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office Location: Building A, Room 123"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Office Hours -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_schedule"
            android:contentDescription="Office Hours Icon" />

        <TextView
            android:id="@+id/instructor_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Office Hours: Mon and Wed 10:00 AM - 12:00 PM"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_email"
            android:contentDescription="Email Icon" />

        <TextView
            android:id="@+id/instructor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: instructor@example.com"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
